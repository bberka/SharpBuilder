<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
      <Version>1.0.0</Version>
      <Title>SharpBuilder</Title>
      <Description>C# code and class builder, for creating models from various type of files. Excel, text, json files.</Description>
      <PackageProjectUrl>https://github.com/bberka/SharpBuilder</PackageProjectUrl>
      <RepositoryType>https://github.com/bberka/SharpBuilder</RepositoryType>
      <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
      <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
      <PackageReadmeFile>README.md</PackageReadmeFile>
      <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\easme-lib\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
